{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Estudiosala list</h1>

    <table cellpadding="0" cellspacing="0" border="0" class="records_list table table-striped table-bordered" width='100%'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Estudio</th>
                <th>Sala</th>
                <th>Activo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('estudiosala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estudio }}</td>
                <td>{{ entity.sala }}</td>
                <td>{{ entity.activo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('estudiosala_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('estudiosala_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('estudiosala_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
