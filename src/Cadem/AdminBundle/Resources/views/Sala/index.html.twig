{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sala list</h1>

    <table class="records_list" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" width='100%'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Foliocadem</th>
                <th>Calle</th>
                <th>Numerocalle</th>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>Respuestagmap</th>
                <th>Tipogmap</th>
                <th>Activo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.foliocadem }}</td>
                <td>{{ entity.calle }}</td>
                <td>{{ entity.numerocalle }}</td>
                <td>{{ entity.latitud }}</td>
                <td>{{ entity.longitud }}</td>
                <td>{{ entity.respuestaGmap }}</td>
                <td>{{ entity.tipoGmap }}</td>
                <td>{{ entity.activo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sala_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sala_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('sala_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
